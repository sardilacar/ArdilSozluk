@model List<Ardil.Application.Models.EntryModels.EntryResponseModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model != null)
{
    <h4 style="margin: 15px 0;font-size: 22px;color: #333333;"> <a href=""><b>@*_model.Topic.Subject*@</b></a>  </h4>
    foreach (var _model in Model)
    {
        <div style="padding: 2rem 0 2rem 0;">
            <p>@_model.Content</p>
            <div>
                <i class="fa-solid fa-circle-arrow-up"></i>
                <i class="fa-solid fa-circle-arrow-down" style="padding: 0 0 0 15px;"></i>
                <i class="fa-solid fa-ellipsis" style="float: right;padding: 0 10px 0 15px;"></i>
                <i class="fa-solid fa-arrow-up-from-bracket" style="float: right; "></i>
            </div>
            <div style=" display:flex ; float: right; font-size: 14px;" class="p-2">
                <div class="me-2 ">
                    <a style="display: block; text-align: right; text-decoration: none; color: #81C14B;" href="">@*_model.Entry.User.UserName*@</a>
                    <a style="display: block;text-decoration: none; color: #888888;" href="">@_model.CreatedDate</a>
                </div>
                <img src="img/user.svg" alt="">
            </div>
        </div>
    }
}
else
{
    @await Component.InvokeAsync("PopularTopics")
}
